.api-element
	p
		margin-top 0
		
	.red
		color red
	
	.values
		color #777
		font-weight bolder

body
	background #fafafa
	font-family 'Open Sans'
	margin 0
	padding 0
	
footer
	border-color #555
	border-style dashed
	border-width 2px 0 0 0
	color #777
	margin-top 150px
	padding-top 10px
					
main 
	padding 25px
	
	a
		color #0060C0 !important
		text-decoration none
	
	h3, h4
		display inline-block

nav
	background #039BE5
	box-sizing border-box !important
	color white
	padding 15px
	position relative
	width 100%
	z-index 3
	
	h1
		display inline
		line-height 45px
		
	ul
		margin 0
		padding 0
		position relative
		
		li, li a
			display inline-block
			
		li
			margin 0
			
			a
				border-color #29B6F6
				border-style solid
				border-width 0 0 5px 0
				color white
				line-height 45px
				padding 0 10px
				text-decoration none
				transition border-color 0.2s
				
				&:hover
					border-color #81D4FA

pre
	background white
	border 1px solid #333
		
table
	background #FEF9E5
	width 100%
	
	td
		padding 5px
		
	td.first
		width 40%
		
	th
		background #FFE299